{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./src",
    "paths": {
      "@ts-livedata/core": [
        "./src"
      ]
    }
  },
  "exclude": [
    "**/build/",
    "./src/test/**/*.spec.ts"
  ]
}